

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/emi.css" rel="stylesheet" />
<h1>

    <img src="~/images/excel_logo.png" />
    Excel Bank
</h1>
<h2>Student Loan EMI Calculator</h2>
<div class="row">
    <div class="col-md-6 " style="border: solid">
        <h2>Type of EMI</h2>

        @using (Html.BeginForm("Index", "Input", FormMethod.Post))
        {
            <div class="slidecontainer row">
                <input runat="server" oninput="loanamt()" type="range" min="1500" max="999999" value="1500" class="slider col-md-6" name="loanamt_value" id="sld_loanamt" />
                <p class="col-md-5">
                    <input class="col-md-8" runat="server" onchange="loanamt_rev()" id="txt_loanamt" value="1500" type="text" />
                </p>
            </div>
            <h5>Tenure</h5>
            <div class="slidecontainer row">

                <input oninput="tenure()" runat="server" type="range" min="3" max="18" value="3" step="3" class="slider1 col-md-6 " name="tenure_value" id="sld_tenure" />

                <select name="cars" id="drp_tenure" runat="server" onchange="tenure_rev()">
                    <option value="3">3 months</option>
                    <option value="6">6 months</option>
                    <option value="9">9 months</option>
                    <option value="12">12 months</option>
                    <option value="15">15 months</option>
                    <option value="18">18 months</option>
                </select>
            </div>

            <h5>Rate of Intrest Per Annum(%)</h5>
            <div class="slidecontainer row">
                <input oninput="interest()" runat="server" type="range" min="1" max="15" value="1" step="0.01" class="slider2 col-md-6 " name="interest_value" id="sld_interest" />
                <p class="col-md-5">
                    <input class="col-md-8" runat="server" onchange="interest_rev()" type="text" value="1" id="txt_interest" />
                </p>
            </div>


            <input type="submit" class="btn-danger" value="Calculate" />

            <div class="row">
                <p class="col-md-6" style="margin: 0;">Monthly Emi</p>
                <label>Rs. @ViewBag.Monthly_Emi</label>
            </div>
            <div class="row">
                <p class="col-md-6" style="margin: 0;">Total Interest Amount</p>
                <label>Rs. @ViewBag.Total_Interest</label>
            </div>
            <div class="row">
                <p class="col-md-6" style="margin: 0;">Total Amount Payable</p>
                <label>Rs. @ViewBag.Total_Amount</label>
            </div>

            <p style="font-size:small;margin-bottom: 0;">Note:- Loan principal amount should not be greater than the Credit Limit of the Card.</p>

        }



    </div>







